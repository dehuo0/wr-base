+static void
+clean_exit(void)
+{
+	static int exit_cnt = 0;
+	char *quit = "quit\n";
+	char ibuf[1];
+
+	exit_cnt++;
+	if (clean_exit_flg && exit_cnt <= 1) {
+		ibuf[0] = 3;
+		if (write(master, ibuf, 1) < 1)
+			fail();
+		if (write(master, quit, 5) < 1)
+			fail();
+		return;
+	}
+	fail();
+}
